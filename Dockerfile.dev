FROM dunglas/frankenphp

WORKDIR /app

# Install PHP extensions manager
RUN install-php-extensions pcntl

# Install required PHP extensions and libraries
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libzip-dev \
    unzip \
    git \
    zip \
    libonig-dev \
    libxml2-dev \
    default-mysql-client \
    curl \
    nodejs \
    npm \
    && docker-php-ext-install gd zip pdo_mysql \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Increase PHP memory limit
RUN echo "memory_limit=1024M" > /usr/local/etc/php/conf.d/memory-limit.ini

COPY . /app

# Copy composer.lock and composer.json first for caching
COPY composer.json composer.lock /app/

# Install Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
RUN composer install --optimize-autoloader

# Laravel setup (optional for dev)
RUN php artisan key:generate || true
RUN php artisan setup:cache-dirs || true

# Expose Laravel + Vite ports
EXPOSE 8000 5173

# Start FrankenPHP in watch mode
ENTRYPOINT ["php", "artisan", "octane:frankenphp", "--max-requests=1", "--watch", "--host=0.0.0.0", "--port=8000"]

